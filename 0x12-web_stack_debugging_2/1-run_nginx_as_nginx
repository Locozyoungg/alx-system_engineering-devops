#!/usr/bin/env bash
# This script configures Nginx to run as the nginx user and listen on port 8080

# Backup the original nginx configuration file
cp /etc/nginx/nginx.conf /etc/nginx/nginx.conf.orig

# Set nginx user to nginx
sed -i 's/user\s*nginx;/user nginx;/' /etc/nginx/nginx.conf

# Make sure nginx listens on all active IPs on port 8080
sed -i '/listen\s*80;/a \    listen 8080;' /etc/nginx/nginx.conf

# Restart nginx to apply changes
service nginx restart
